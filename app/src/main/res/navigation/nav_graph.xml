<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/LoginFragment">

    <fragment
        android:id="@+id/LoginFragment"
        android:name="com.example.tmcandroid.fragments.LoginFragment"
        android:label="@string/login_fragment_label"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_LoginFragment_to_NewsFragment"
            app:destination="@id/NewsFragment" />
    </fragment>
    <fragment
        android:id="@+id/NewsFragment"
        android:name="com.example.tmcandroid.fragments.NewsFragment"
        android:label="@string/news_fragment_label"
        tools:layout="@layout/fragment_news">

        <action
            android:id="@+id/action_NewsFragment_to_Info_Fragment"
            app:destination="@id/InfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/InfoFragment"
        android:name="com.example.tmcandroid.fragments.InfoFragment"
        android:label="@string/info_fragment"
        tools:layout="@layout/fragment_info" >

        <action
            android:id="@+id/action_Info_Fragment_to_News_Fragment"
            app:destination="@id/NewsFragment" />
    </fragment>

</navigation>